<!-- src/components/Footer.astro -->
---
const props = defineProps<{
  copyright?: string;
  socialLinks?: Array<{ platform: string; url: string }>;
}>();

const copyrightText = props.copyright || "© 2025 Clínica Dental. Todos os direitos reservados.";
const socialLinks = props.socialLinks || [
  { platform: "Instagram", url: "https://instagram.com/dentalclinic" },
  { platform: "Facebook", url: "https://facebook.com/dentalclinic" },
  { platform: "WhatsApp", url: "https://wa.me/5511999999999" },
];
---

<footer class="bg-gray-900 text-white py-16">
  <div class="container mx-auto px-6 text-center">
    <p class="mb-6">{copyrightText}</p>
    <div class="flex justify-center space-x-6 text-gray-400">
      {socialLinks.map(link => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-white transition"
        >
          {link.platform}
        </a>
      ))}
    </div>
  </div>
</footer>
